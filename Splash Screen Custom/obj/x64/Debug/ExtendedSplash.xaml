<Page
    x:Class="Splash_Screen_Custom.ExtendedSplash"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Splash_Screen_Custom"
    xmlns:lottie="using:Microsoft.Toolkit.Uwp.UI.Lottie"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Canvas>
            <!--<muxc:AnimatedVisualPlayer
                x:Name="extendedSplashImage"
                Width="200"
                AutoPlay="False"
                AutomationProperties.Name="Lottie animation"
                CacheMode="BitmapCache">
            -->
            <!--  LottieVisualSource that parses a JSON Uri at run-time  -->
            <!--
                <lottie:LottieVisualSource UriSource="ms-appx:///Splash/Duolingo.json" />
            </muxc:AnimatedVisualPlayer>-->
            <Image x:ConnectionId='2' x:Name="extendedSplashImage" Source="Splash/duo.gif" />
            <muxc:ProgressRing x:ConnectionId='3'
                Name="splashProgressRing"
                Width="40"
                Height="40"
                Padding="0,0,20,0"
                HorizontalAlignment="Center"
                IsActive="True"
                Visibility="Visible" />
        </Canvas>
    </Grid>
</Page>

